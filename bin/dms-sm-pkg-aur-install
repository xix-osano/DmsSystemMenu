#!/bin/bash

export LC_ALL=C
export YAYDIRCOLOR=0
export YAYNOCOLOR=1

fzf_args=(
  --multi
  --ansi
  --preview 'yay --color=never -Sii {2}'
  --preview-label='alt-p: toggle description, alt-b/B: toggle PKGBUILD, alt-j/k: scroll, tab: multi-select'
  --preview-label-pos='bottom'
  --preview-window 'down:65%:wrap'
  --bind 'alt-p:toggle-preview'
  --bind 'alt-d:preview-half-page-down,alt-u:preview-half-page-up'
  --bind 'alt-k:preview-up,alt-j:preview-down'
  --bind 'alt-b:change-preview:yay --color=never -Gp {2} | tail -n +5'
  --bind 'alt-B:change-preview:yay --color=never -Sii {2}'
  --color 'pointer:green,marker:green'
)

# list as "repo name", keep both columns so {2} is the package name
pkg_names=$(yay -Slqa | fzf "${fzf_args[@]}")

if [[ -n "$pkg_names" ]]; then
  # extract package column and install
  echo "$pkg_names" | awk '{print $2}' | tr '\n' ' ' | xargs yay -S --noconfirm --color=never
  sudo updatedb
  dms-sm-show-done
fi
